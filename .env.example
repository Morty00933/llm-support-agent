# Copy this file to .env to configure the local stack.
# Values below mirror docker-compose defaults so the project works out of the box.

# Application
ENV=dev
LOG_LEVEL=INFO
APP_NAME=llm-support-agent
APP_VERSION=0.2.0

# Database
DB_HOST=db
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=app
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/app

# Redis / Celery
REDIS_HOST=redis
REDIS_PORT=6379
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Auth
JWT_SECRET=change-me
JWT_ALG=HS256
JWT_ISS=llm-agent
JWT_AUD=llm-ui
JWT_EXPIRE_MIN=1440

# Ollama / LLMs
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL_CHAT=qwen2.5:3b
OLLAMA_MODEL_EMBED=nomic-embed-text-v1.5
EMBEDDING_DIM=768

# Optional integrations / observability
SENTRY_DSN=
JIRA_ENABLED=false
ZENDESK_ENABLED=false
PROMETHEUS_ENABLED=true
