# Auto detect text files and perform LF normalization
* text=auto

# Shell scripts should always use LF
*.sh text eol=lf

# Windows batch files should use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf

# Docker files should use LF
Dockerfile* text eol=lf
*.dockerfile text eol=lf
docker-compose*.yml text eol=lf

# Python files should use LF
*.py text eol=lf

# Config files
*.ini text eol=lf
*.cfg text eol=lf
*.conf text eol=lf
*.config text eol=lf

# Markdown
*.md text eol=lf

# JSON, YAML
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
